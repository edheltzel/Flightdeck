<!DOCTYPE html>
  <html lang="en">
  {%- include "global/head.njk" -%}
    <body>
      {% include "components/navigation.njk" %}
      <main class="container" aria-label="Content">
        {%- set pageTitle %}{% if title %}{{ title }}{% else %}{{ site.title }}{% endif %}{%- endset -%}
        {%- set pageTagline %}{% if tagline %}{{ tagline }}{% endif %}{%- endset -%}
        {% if tagline %}
        <hgroup>
          <h1>{{ pageTitle}}</h1>
          <h2>{{ pageTagline | safe }}</h2>
        </hgroup>
        {% else %}
          <h1>{{ pageTitle}}</h1>
        {% endif %}

        {{ content | safe }}

        {% include "global/footer.njk" %}
      </main>
    </body>
  </html>
