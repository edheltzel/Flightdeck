{
  "files.exclude": {
    "**/.sass-cache/": true,
    "**/_site/": false, // set to true if you do not want to see the build output dir.
    "node_modules/": false
  },
  "search.exclude": {
    "node_modules/": true,
    "_site/**": true,
    "dist/**": true,
    "**/css/*": true,
    "*.lock": true,
    "**/.sass-cache/": true,
    "**/.publish/": true,
    ".vscode/**": true,
    "package-lock.json": true
  },
  "emmet.includeLanguages": {
    "*.njk": "html"
  },
  "files.associations": {
    ".flightdeck.config": "javascript"
  },
  "cSpell.customDictionaries": {
    "custom-dictionary-workspace": {
      "name": "custom-dictionary-workspace",
      "path": "${workspaceFolder:flightdeck-for-eleventy}/.vscode/cspell-custom-dictionary-workspace.txt",
      "addWords": true,
      "scope": "workspace"
    }
  },
  "cSpell.words": [
    "alpinejs",
    "cleancache",
    "divriots",
    "flightdeck",
    "Heltzel",
    "Laserwave",
    "postbuild",
    "thefold"
  ]
}
