# editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = tab
insert_final_newline = true
trim_trailing_whitespace = true

[*.{md,markdown}]
trim_trailing_whitespace = false
indent_size = 2

[*.{njk,nunjucks,liquid,html}]
indent_style = tab
indent_size = 2

[*.{css,scss}]
indent_style = tab
indent_size = 2

[*.{json,yaml,yml}]
indent_style = tab
indent_size = 2
