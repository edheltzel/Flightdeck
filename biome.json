{
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true
    }
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "lineWidth": 120
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "double",
      "semicolons": "always"
    },
    "globals": ["$", "_", "externalVariable"]
  },
  "files": {
    "ignore": [
      "./node_modules",
      "./.vscode",
      "./.cache/**/*",
      "./.jampack/**/*",
      "./_site/**/*",
      "./dist/**/*",
      "*.map.*",
      "./package.json",
      "./*rc*.json"
    ]
  }
}
