{
	"$schema": "https://biomejs.dev/schemas/1.8.3/schema.json",
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"nursery": {
				"useSortedClasses": {
					"level": "error",
					"fix": "safe",
					"options": {}
				}
			}
		}
	},
	"formatter": {
		"enabled": true,
		"lineWidth": 120
	},
	"javascript": {
		"globals": ["$", "_", "externalVariable"]
	},
	"json": {
		"formatter": {
			"enabled": true,
			"lineWidth": 120
		}
	},
	"css": {
		"formatter": {
			"enabled": true,
			"lineWidth": 120
		},
		"linter": {
			"enabled": true
		}
	},
	"files": {
		"ignore": [
			"./node_modules",
			"./.vscode",
			"./.cache/**/*",
			"./.jampack/**/*",
			"./_site/**/*",
			"./dist/**/*",
			"*.map.*",
			"./package.json",
			"./*rc*.json"
		]
	}
}
